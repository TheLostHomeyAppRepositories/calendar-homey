{
  "extends": "athom",
  "rules": {
    "comma-dangle": "off",
    "max-len": "off",
    "no-console": "off",
    "object-curly-newline": "off",
    "padded-blocks": "off",
    "semi": "off",
    "space-before-function-paren": "off",
    "consistent-return": "off",
    "no-else-return": "off",
    "no-loop-func": "off"
  },
  "ignorePatterns": [
    "**/settings/*.js",
    "**/homeyscripts/*.js"
  ],
  "env": {
    "jest/globals": true
  },
  "plugins": [
    "jest"
  ]
}
